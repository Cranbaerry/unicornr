<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_UNICORNR_NOTIFICATIONS_FORM_LBL_TRANSACTIONNOTIFICATION_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_UNICORNR_NOTIFICATIONS_FORM_LBL_TRANSACTIONNOTIFICATION_MODIFIED_BY"/>
    <field name="days_before_reminder" filter="int" type="text" required="true" label="COM_UNICORNR_NOTIFICATIONS_FORM_LBL_TRANSACTIONNOTIFICATION_DAYS_BEFORE_REMINDER" description="COM_UNICORNR_NOTIFICATIONS_FORM_DESC_TRANSACTIONNOTIFICATION_DAYS_BEFORE_REMINDER" hint="COM_UNICORNR_NOTIFICATIONS_FORM_LBL_TRANSACTIONNOTIFICATION_DAYS_BEFORE_REMINDER"/>
    <field name="time" default="09:00" filter="safehtml" type="text" required="true" label="COM_UNICORNR_NOTIFICATIONS_FORM_LBL_TRANSACTIONNOTIFICATION_TIME" description="COM_UNICORNR_NOTIFICATIONS_FORM_DESC_TRANSACTIONNOTIFICATION_TIME" hint="COM_UNICORNR_NOTIFICATIONS_FORM_LBL_TRANSACTIONNOTIFICATION_TIME"/>
    <field name="message" filter="safehtml" type="textarea" required="true" label="COM_UNICORNR_NOTIFICATIONS_FORM_LBL_TRANSACTIONNOTIFICATION_MESSAGE" description="COM_UNICORNR_NOTIFICATIONS_FORM_DESC_TRANSACTIONNOTIFICATION_MESSAGE" hint="COM_UNICORNR_NOTIFICATIONS_FORM_LBL_TRANSACTIONNOTIFICATION_MESSAGE"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
